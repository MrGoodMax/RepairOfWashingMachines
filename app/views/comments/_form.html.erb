<%= render 'shared/errors', object: @comment %>

  <%= form_with model: [@review, @comment] do |f| %>
  <div class="mb-1">
    <div>
    <%= f.text_area :body, class: "form-control", placeholder: 'Добавить комментарий', required: true, minlenght: 5 %>
    </div>
  </div>
  <div class="send">
    <%= f.submit "Отправить", class: "btn"%>
  </div>
    <% end %>