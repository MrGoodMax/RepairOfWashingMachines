<% provide :page_title, 'Registrarion' %>

<h1 class="mb-4">Регистрация</h1>

<%= form_with model: @user do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
    <%= f.label :email %>
    </div>

    <div class="col-sm-10">
    <%= f.email_field :email, placeholder: 'E-mail', class: "form-control form-control-lg" %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
    <%= f.label :Имя %>
    </div>

  <div class="col-sm-10">
    <%= f.text_field :name, placeholder: 'Имя' , class: "form-control" %>
  </div>
</div>

<div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
    <%= f.label :password, "Пароль" %>
    </div>

  <div class="col-sm-10">
    <%= f.password_field :password, class: "form-control" %>
  </div>
</div>

<div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
    <%= f.label :password_confirmation, "Повторите пароль" %>
    </div>

  <div class="col-sm-10">
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
</div>

<%= f.submit 'Зарегистрироваться', class:'btn btn-primary btn-lg' %>
<% end %>