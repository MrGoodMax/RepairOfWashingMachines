<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= full_title(yield(:clients_title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="black-shadow">
      <div class="logo"><span><%= link_to image_tag("Wash.png"), root_path%></span>
      </div>
        <div class="flash" style="position: absolute; display: flex; top: 100px; width: 25vh; text-align: center; font-size: 1.2em, margin: auto;">
        <% flash.each do |k,v| %>
        <%=tag.div v, class: "alert alert-#{k}", role: 'alert'%>
        <% end %>
        </div>
          <nav class="navigation">
            <span><%= link_to 'О нас', abouts_path%></span>
            <span><%= link_to 'Услуги', services_path%></span>
            <span><%= link_to 'Контакты', contacts_path%></span>
            <span><%= link_to 'Отзывы',  reviews_path%></span>
              <% if user_signed_in? %>
            <span class="dropdown", href="#">
            <button onclick="myFunction()" class="dropbtn btnLogin-popup btn-lg"><%= current_user.name%></button>
          <div id="myDropdown" class="dropdown-content">
            <span class="edit"><%= link_to 'Редактировать', edit_user_path(current_user) %></span>
            <span class="exit"><%= link_to 'Выйти', session_path, data: {method: :delete} %></span>
              <% else %>
            <button onclick="myFunction()" class="dropbtn btnLogin-popup btn-lg">Регистрация</button>
          <div id="myDropdown" class="dropdown-content">
            <span span><%= link_to 'Зарегистрироваться', new_user_path%></span>
            <span><%= link_to 'Войти', new_session_path%></span>
          </div>
            <% end %>
          </nav>
          </div>
    </header>
      <%= yield %>      
  </body>
</html>


